<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<TextView
    android:id="@+id/text_hello"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/hello"
    />
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/pick_rgb_color"
    android:onClick="onPickRGBColor"
    />
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/pick_hsv_color"
    android:onClick="onPickHSVColor"
    />
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/pick_grid_color"
    android:onClick="onPickGridColor"
    />

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/pick_file"
    android:onClick="onPickFile"
    />
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/pick_number"
    android:onClick="onPickNumber"
    />
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/magnify_image"
    android:onClick="onMagnifyView"
    />
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/detect_gesture"
    android:onClick="onGestureView"
    />

